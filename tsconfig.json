{
    "compilerOptions": {
		// general
        "sourceMap": true,
		"watch": true,
		"outDir": "Source_JS",

		// modules/paths
		"moduleResolution": "node",
		//"maxNodeModulesJsDepth": 1,
        //"rootDir": ".",
        "rootDir": "Source",
		"baseUrl": ".",
		/*"rootDir": "Source",
		"baseUrl": "Source",*/
		"paths": {
			"*": [
				"node_modules/@types/*", // prefer "/node_modules/@types" over "/node_modules/[something]/node_modules/@types" (eg, when using npm link)
				"*",
				"node_modules_CustomExternal/*",
				"node_modules_CustomInternal/*"
			]
		},

		// compiler options
		"target": "es2015",
        "allowJs": true,
		"jsx": "react",
        "noImplicitAny": false,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
    },
	"files": ["Source/Main.ts"],
    "include": [
        "Typings/**/*.d.ts",
		//"Typings/globals/**/*.d.ts",
        "**/*.ts",
        "**/*.tsx"
		//"**/*.js",
		//"**/*.jsx"
    ],
    "exclude": [
        /*"index.android.js",
        "index.ios.js",*/
        "Build",
        "Tests",
		"node_modules",

		// temp
		"node_modules_CustomExternal"
		//"node_modules_CustomInternal",

        /*"Typings/main",
        "Typings/main.d.ts",
        "Typings/browser",
        "Typings/browser.d.ts",*/
    ],
	"compileOnSave": true
}